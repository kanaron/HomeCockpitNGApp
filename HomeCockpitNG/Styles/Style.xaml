<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="TextBlock" x:Key="Text">
        <Setter Property="FontSize" Value="35"/>
        <Setter Property="FontFamily" Value="Bahnschrift Light Condensed"/>
        <Setter Property="Foreground" Value="#85a2c0"/>
    </Style>

    <Style TargetType="Button" x:Key="ShellButton">
        <Setter Property="Background" Value="#73aff8" />
        <Setter Property="Margin" Value="3 0 0 3"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Style.Resources>
    </Style>

</ResourceDictionary>